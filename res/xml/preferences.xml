<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="Preferences" >
        <ListPreference android:dialogTitle="Choose alert type" android:entries="@array/alert_names" android:entryValues="@array/alert_values" android:key="alert" android:summary="Delete the picture you just took with one click" android:title="Turbo Mode" android:defaultValue="overlay" /><CheckBoxPreference
            android:defaultValue="false"
            android:key="prompt"
            android:title="Display Delete Confirmation" android:summary="Much slower!"/>

        
        <CheckBoxPreference android:key="refresh" android:title="Camera Refresh Fix" android:summary="Enable this workaround if your Camera app does not detect the picture being deleted"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="About" >
        <Preference
            android:key="version"
            android:title="@string/app_name" />
    </PreferenceCategory>

</PreferenceScreen>